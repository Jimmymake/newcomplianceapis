# Environment Configuration Template
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/merchantdb

# For Docker with authentication:
# MONGO_URI=mongodb://admin:password123@mongodb:27017/merchantdb?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# MongoDB Credentials (for Docker)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=merchantdb

# Webhook Configuration (optional)
WEBHOOK_URL=https://webhook.site/your-webhook-id

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info



